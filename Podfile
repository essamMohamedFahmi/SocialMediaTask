# platform :ios, '12.0'

target 'SocialMediaTask' do
  use_frameworks!

  # Pods for SocialMediaTask

  # Network
  pod 'Moya'

  # Image Caching  
  pod 'Kingfisher'

  # Data Binding
  pod 'RxSwift'
  pod 'RxCocoa'

  # Firebase
  pod 'Firebase/Auth'

  # Helper
  pod 'NVActivityIndicatorView'
  pod 'IQKeyboardManagerSwift'
  pod 'Toast-Swift'
  
  # Add animation functionalities to UIView through Extensions
  pod 'Motion'

  target 'SocialMediaTaskTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
