# platform :ios, '12.0'

target 'SocialMediaTask' do
  use_frameworks!

  # Pods for SocialMediaTask

  # Network
  pod 'Moya'

  # Image Caching  
  pod 'Kingfisher'

  # Data Binding
  pod 'RxSwift'
  pod 'RxCocoa'

  # Firebase
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'Firebase/Auth'

  # Light-Weight Safe Helper
  pod 'NVActivityIndicatorView'
  pod 'IQKeyboardManagerSwift'
  pod 'GrowingTextView'
  pod 'TLPhotoPicker'
  pod 'Toast-Swift'
  
  # Add animation functionalities to UIView through Extensions
  pod 'Motion'
end

# Pods used in Testing
target 'SocialMediaTaskTests' do
  pod 'Moya'
end
